:root {
  --bg: rgb(44,50,54);
  --bt: rgba(44,50,54,0.9);
  --mg: rgb(60,65,70);
  --tg: rgba(75,80,85,0.5);
  --ac: rgb(255,179,0);
  --do: rgb(200, 130, 40);
  --tp: rgba(0,0,0,0);

  --blue: rgb(70,200,250);
  --red: rgb(240,110,120);
  --green: rgb(100,255,120);
  --purple: rgb(255,100,255);
  --white: rgb(230,230,240);
  --black: rgb(0,0,0);
  --yellow: rgb(255,200,100);
  --lg: lightgray;
  --tg: rgba(255,255,255,0.5);
}

.chad {
  color: var(--ac) !important;
  font-size: 90pt;
  font-family: "Holtwood One SC", serif;
  line-height: 0.4em;
  margin-bottom: -0.2em;
  margin-top: 0.7em;
  /**background-color:rgb(100,70,0);**/
}
@media only screen and (max-device-width: 1000px) {
  .chad {
    color: var(--ac) !important;
    font-size: 65pt;
    font-family: "Holtwood One SC", serif;
    line-height: 0.4em;
    /**background-color:rgb(100,70,0);**/
  }
}
.center {
  text-align: center;
  margin-right:auto;
  margin-left:auto;
}
.wars {
  color: var(--ac) !important;
  font-family: "Teko";
  font-size: 61px;
  line-height: 0.5em;
  margin-top: 1em;
  margin-bottom: -0.5em;
}
@media only screen and (max-device-width: 1000px) {
  .wars {
    font-size: 44px;
    margin-top: 35px;
  }
}
.arabic {
  font-size: 0.3em;
  font-family: Cairo;
  color: var(--do);
  font-stretch: ultra-expanded;
}
.toyota {
  width: 410px;
  left: 50%;
  image-rendering: pixelated;
  z-index: 2;
  margin-top: -50px;
}
@media only screen and (max-device-width: 1000px) {
  .toyota {
  width: 290px;
  }
}

.mybutton {
  display: block;
  font-size: 1.2rem;
  color: var(--ac);
  border: 4px solid #ffb300;
  padding: 0.8rem 1.6rem;
  border-radius: 4px;
  transition: background-color 0.1s ease;
  box-sizing: border-box;
  margin-left:auto;
  margin-right:auto;
  margin-top: -150px;
  font-family: monospace;
  text-align:center;
  width: 435px;
  cursor: pointer;
}
@media only screen and (max-device-width: 1000px) {
  .mybutton {
    width: 320px;
    max-width: 95%;
    margin-top: -120px;
  }
}

#welcome {
  margin-top: -100px;
}

.features .feature h2 {
    font-family: cairo !important;
}

body, html {
    background-color: var(--bg);
}

blockquote {
    border-left: 0.3rem solid var(--ac) !important;
    background-color: rgba(255,179,0,0.2) !important;
}

blockquote p {
    font-color: white !important;
}

#eastereggimage {
  width:50px;
  height:50px;
  margin-bottom:-2px;
  margin-left:-1px;
  image-rendering: pixelated;
}

#easteregg {
  display: block;
  width:50px;
  height:50px; 
  background-color:var(--grey);
  z-index:100;
  padding: 10px;
  margin-top: 300px;
}

.dice {
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 100;
  background-color: rgba(44,50,54,0.8);
  border-radius: 30px;
  margin: 20px;
}

#die1 {
    margin-right: -20px;
    bottom: 0;
}

#die2 {
    bottom: 0;
}

.blue, .red, .green, .purple, .yellow, .white, .black {
    padding: 2px;
    border-radius: 3px;
    background-color: red;
    color: black;
    font-weight: bold;
    background-opacity: 0.5;
}

.blue {
    background-color: var(--blue);
}
.red {
    background-color: var(--red);
}
.green {
    background-color: var(--green);
}
.purple {
    background-color: var(--purple);
}
.yellow {
    background-color: var(--yellow);
}
.white {
    background-color: var(--white);
}
.black {
    background-color: var(--black);
    color: white;
}

body, .sidebar {
    color: lightgrey !important;
}

.theme-default-content code {
    color: white !important;
    background-color: rgb(39,44,53) !important;
}

.unitTypes {
    width: 140px;
    image-rendering: crisp-edges;
    margin-bottom: 20px;
}

.unitID {
    width: 221px;
    margin-bottom: 20px;
}

#app, .sidebar, html {
    background-color: var(--bg) !important;
    border: none;
}

 ul.suggestions {
    background-color: var(--mg) !important;
    border: none !important;
 }

#app .theme-container .home .features, .theme-container .home .footer {
    border-top: none;
}

.features {
    margin-top: 50px !important;
}

.navbar {
    background-color: var(--bt);
    border-bottom: none;
}

.links {
    background-color: var(--tp) !important;
}

.links .search-box input {
    background-color: var(--mg);
    border: none;
}

.nav-links .nav-item {
    font-variant: small-caps;
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
    border-bottom: 4px solid var(--ac) !important;
}

.home .hero .action-button {
    color: var(--bg) !important;
    margin-top: 50px;
    font-family: monospace !important;
}

h2, p, .footer {
    color: var(--lg) !important;
}

#main-title, .description {
    color: var(--ac) !important;
}

.sidebar-sub-headers a.sidebar-link, .sidebar .sidebar-links .sidebar-link  {
    color: lightgray !important;
}
.sidebar-sub-headers a.active.sidebar-link {
    color: var(--ac) !important;
}

.home .hero #main-title {
    font-family: "Teko" !important;
    text-transform: uppercase;
    font-size: 65px !important;
    margin-top: -75px;
}

.theme-container .navbar .home-link .site-name {
    font-family: sans-serif !important;
    font-weight: bold !important;
    color: var(--lg) !important;
}

.description {
    font-family: impact !important;
}

header.hero img {
    padding-top: 60px;
    object-fit: cover;
