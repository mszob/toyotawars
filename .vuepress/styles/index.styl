@import url('https://fonts.googleapis.com/css2?family=Teko:wght@700&display=swap');

:root {
  --bg: rgb(44,50,54);
  --bt: rgba(44,50,54,0.9);
  --lg: rgb(60,65,70);
  --tg: rgba(75,80,85,0.5);
  --ac: rgb(255,179,0);
  --do: rgb(200, 130, 40);
  --tp: rgba(0,0,0,0);

  --blue: rgb(70,200,250);
  --red: rgb(240,110,120);
  --green: rgb(100,255,120);
  --purple: rgb(255,100,255);
  --white: rgb(230,230,240);
  --yellow: rgb(255,200,100);
}

.blue, .red, .green, .purple, .yellow, .white {
    padding: 2px;
    border-radius: 3px;
    background-color: red;
    color: black;
    font-weight: bold;
}

.blue {
    background-color: var(--blue);
}
.red {
    background-color: var(--red);
}
.green {
    background-color: var(--green);
}
.purple {
    background-color: var(--purple);
}
.yellow {
    background-color: var(--yellow);
}
.white {
    background-color: var(--white);
}

body, .sidebar {
    color: lightgrey !important;
}

.theme-default-content code {
    color: white !important;
    background-color: rgb(34,40,44) !important;
}

.unitTypes {
    width: 140px;
    image-rendering: crisp-edges;
    margin-bottom: 20px;
}

.unitID {
    width: 221px;
    margin-bottom: 20px;
}

#app, .sidebar, html {
    background-color: var(--bg) !important;
    border: none;
}

 ul.suggestions {
    background-color: var(--lg) !important;
    border: none !important;
 }

#app .theme-container .home .features, .theme-container .home .footer {
    border-top: none;
}

.features {
    margin-top: 50px !important;
}

.navbar {
    background-color: var(--bt);
    border-bottom: none;
}

.links {
    background-color: var(--tp) !important;
}

.links .search-box input {
    background-color: var(--tg);
    border: none;
}

.nav-links .nav-item {
    font-variant: small-caps;
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
    border-bottom: 4px solid var(--ac) !important;
}

.home .hero .action-button {
    color: var(--bg) !important;
    margin-top: 50px;
}

#main-title, .description {
    color: var(--ac) !important;
}

.sidebar-sub-headers a.sidebar-link  {
    color: lightgray !important;
}
.sidebar-sub-headers a.active.sidebar-link {
    color: var(--ac) !important;
}

.home .hero #main-title {
    font-family: "Teko" !important;
    text-transform: uppercase;
    font-size: 65px !important;
    margin-top: -75px;
}

.description {
    font-family: impact !important;
}

header.hero img {
    padding-top: 60px;
    object-fit: cover;
    image-rendering: pixelated;
    width: 470px;
}